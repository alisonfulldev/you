<section class="course">
  <div class="course-header">
    <h1><%= course.title %></h1>
    <p class="muted"><%= course.description %></p>
  </div>
  <div id="react-watch"></div>
  <noscript>
    <p class="muted">Ative o JavaScript para assistir Ã s aulas.</p>
  </noscript>
  <div class="course-actions" style="margin-top:12px;">
    <a class="btn pill" id="examBtn" href="/exam/<%= course.id %>" style="margin-right:8px">Fazer Prova</a>
    <a id="certBtn" class="btn ghost" href="/course/<%= course.id %>/certificate">Emitir Certificado</a>
  </div>
</section>

<script>
  window.addEventListener('DOMContentLoaded', function(){
    if (window.UtubeApp && typeof window.UtubeApp.mountWatch === 'function') {
      window.UtubeApp.mountWatch({ courseId: <%= course.id %> });
    }
  });
</script>